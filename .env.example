# ActiveTrader-LLM Environment Variables
# Copy this file to .env and fill in your actual API keys

# ALPACA API CREDENTIALS (Required for Paper/Live Trading)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# LLM API CREDENTIALS (Required for Trading Decisions)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Optional

# BACKEND SECURITY (Optional)
# API_KEY=your_backend_api_key_here  # Enable API key authentication for backend
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173  # Allowed CORS origins
# RATE_LIMIT_RPM=60  # Rate limit: requests per minute per IP

# OPTIONAL SETTINGS
# LOG_LEVEL=INFO
# DATABASE_PATH=data/trading.db
