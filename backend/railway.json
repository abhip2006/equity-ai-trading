{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt && pip install -r ../active_trader_llm/requirements.txt"
  },
  "deploy": {
    "startCommand": "cd .. && python -m uvicorn backend.main:app --host 0.0.0.0 --port $PORT --log-level info",
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/",
    "healthcheckTimeout": 30
  }
}
